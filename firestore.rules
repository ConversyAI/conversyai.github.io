rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read statistics
    match /stats/{document=**} {
      allow read: if true;
      allow write: if true; // Allow updating stats for waitlist count
    }

    // Allow anyone to add to waitlist and check for duplicates
    match /waitlist/{document=**} {
      allow read: if true; // Allow read for duplicate email checking
      allow create: if true; // Anyone can add to waitlist
      allow update: if false; // No updates allowed
      allow delete: if false; // No deletes allowed
    }

    // Interviews/Testimonials - public read, admin write
    match /interviews/{document=**} {
      allow read: if true; // Anyone can read testimonials
      allow write: if request.auth != null; // Only admin can write
    }

    // Visitors tracking
    match /visitors/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Anyone can create visitor records
      allow update, delete: if false;
    }
  }
}